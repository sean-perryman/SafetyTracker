    <%= cl_image_tag('q9bzyq5596v5c8gpoxie.jpg', :angle => 90, :class => 'twic-image twic-row overlay-image hidden') %> <!-- TWIC -->
    <%= cl_image_tag('no-image-available_taerst.jpg', :class => 'chevron-bpso-opo-image chevron-bpso-opo-row overlay-image hidden') %> <!-- Chevron BPSO OPO -->
